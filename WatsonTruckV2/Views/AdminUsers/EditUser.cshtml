            }
        </span>
    </div>*@
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" value="Update" class="btn btn-primary" />
            <button type="button" onclick="return Cancel()" class="btn btn-primary">Cancel</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
            <div class="card-footer">
                <input type="button" value="Manage Roles" onclick="location.href='@Url.Action("ManageUserRoles", "AdminUsers", new { Id = Model.Id })'" />
                @*<a class="btn btn-primary" onclick="return EditUsersInRole()" style="width:auto">Add or Remove users</a>*@
                @Html.ActionLink("Manage Roles", "ManageUserRoles", "AdminRoles", new { Id = Model.Id }, null)
            </div>
        </div>
