                @if (Model.Claims.Any())
                {
                    foreach (var claims in Model.Claims)
                    {
                        <h5 class="card-title">@claims</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            }*@
        @*<div class="card-footer">*@
        @*<input type="button" value="Manage Claims" onclick="location.href='@Url.Action("EditUser", "AdminUsers", new { Id = Model.Id })'" />*@
        @*<a class="btn btn-primary" onclick="return EditUsersInRole()" style="width:auto">Add or Remove users</a>*@
        @*@Html.ActionLink("ManageClaims", "EditUsersInRole", "AdminRoles", new { Id = Model.Id }, null)*@
        @*</div>*@
    </div>

}


    <script>
        function Cancel() {
            window.location.href = "/AdminUsers/ListUsers";
        }
    </script>