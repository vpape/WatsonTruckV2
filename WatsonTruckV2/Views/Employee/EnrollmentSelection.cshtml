<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Enrollment Selection</title>
</head>
<body>
    <input type="hidden" id="Employee_id" class="form-control" name="Employee_id" value="@ViewBag.Employee_id" />
    @*<input type="hidden" id="FamilyMember_id" class="form-control" name="FamilyMember_id" value="@ViewBag.FamilyMember_id" />
        <input type="hidden" id="GroupHealthInsurance_id" class="form-control" name="GroupHealthInsurance_id" value="@ViewBag.GroupHealthInsurance_id" />
        <input type="hidden" id="OtherInsurance_id" class="form-control" name="OtherInsurance_id" value="@ViewBag.OtherInsurance_id" />
        <input type="hidden" id="MaritalStatus" class="form-control" name="MaritalStatus" value="@ViewBag.MaritalStatus" />*@
    <div class="container">
        <h3>Enrollment Selection</h3>
        <div id="EnrollmentSelection">
            <table class="table-bordered" align="center">
                <tr>
                    <td>
                        <div id="NewEmployeeEnrollment">
                            <button type="button" class="button" onclick="return EmployeeEnrollment()">Employee Enrollment</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p></p>
                        <div id="FamilyEnrollment">
                            <button type="button" class="button" onclick="return FamilyEnrollment(@ViewBag.Employee_id)">Family Enrollment</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p></p>
                        <div id="GroupHealthEnrollment">
                            <button type="button" class="button" onclick="return GrpHealthEnrollment(@ViewBag.Employee_id)">Group Health Enrollment</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p></p>
                        <div id="LifeInsuranceEnrollment">
                            <button type="button" class="button" onclick="return LifeInsuranceEnrollment(@ViewBag.Employee_id)">Life Insurance Enrollment</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <p></p>
    <p>
        @Html.ActionLink("Back to Employee Overview", "EmpOverview")
    </p>
</body>
</html>

<style>
    .button, hidden {
        background-color: #2e4593;
        color: white;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: center;
        outline: none;
        font-size: 15px;
    }

        .active, .button:hover {
            background-color: #2e4593;
        }

    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
    }

    a {
        text-decoration: none;
        display: inline-flex;
        padding: 8px 8px;
    }

        a:hover {
            background-color: #ddd;
            color: #147;
        }

    table {
        border-collapse: collapse;
        width: 75%;
    }

    div {
        text-align: center;
    }
</style>

<script>
    function EmployeeEnrollment() {
        window.location.href = "/Employee/NewEmployeeEnrollment";

    }

    function NewFamilyEnrollmentBtn() {

        var maritalStatus = document.querySelector("#MaritalStatus").value;
        var hideFamilybtn = document.getElementById("FamilyEnrollment")
        var showFamilybtn = document.getElementById("FamilyEnrollment")

        hideFamilybtn.addEventListener('click', function () {

            if (maritalStatus == "Single") {

                hideFamilybtn.style.visibility = "hidden";
            }
            else {
                showFamilybtn.style.visibility = "visible";
            }
        })

        window.location.href = "/Employee/FamilyEnrollment?Employee_id=@ViewBag.Employee_id" @*+ "&FamilyMember_id=@ViewBag.FamilyMember_id"*@;

    }

    function FamilyEnrollment() {
        window.location.href = "/Employee/FamilyEnrollment?Employee_id=@ViewBag.Employee_id" @*+ "&FamilyMember_id=@ViewBag.FamilyMember_id"*@;
    }

    function GrpHealthEnrollment() {
        window.location.href = "/Group_Health/GrpHealthEnrollment?Employee_id=@ViewBag.Employee_id" + "&FamilyMember_id=@ViewBag.FamilyMember_id";
    }

    function LifeInsuranceEnrollment() {
        window.location.href = "/Life_Insurance/LifeInsEnrollment?Employee_id=@ViewBag.Employee_id";
    }

</script>



