                        <img src="@Url.Content("~/App_Files/images/WatsonHopperImage.jpg")" width="155" height="120" style="padding-top:20px;">
                    </div>
                    <div id="footerWatsonTruck" class="footer_third">
                        <label>Watson Truck & Supply</label><br />
                        <div>1501 N Grimes</div>
                        <div>Hobbs, NM 88240</div><br />
                        <label style="display:table-cell">Contact:</label>
                        <div>Jerry Elliott</div>
                        <div>575-397-2411</div>
                        <a href="mailto:jerryelliot@watsontruck.com">jerryelliot@watsontruck.com</a>
                    </div>
                    <div id="footerWatsonHopper" class="footer_third">
                        <label>Watson Hopper, Inc.</label><br />
                        <div>1700 West Marland</div>
                        <div>Hobbs, NM 88240</div><br />
                        <label style="display:table-cell">Contact:</label>
                        <div>Mike Slaugh</div>
                        <div>575-397-2411</div>
                        <a href="mailto:mslaugh@watsonhopper.com">mslaugh@watsonhopper.com</a>
                    </div>
                    <div id="footerUnitShop" class="footer_third">
                        <label>Unit Shop, LLC</label><br />
                        <div>1501 N Grimes</div>
                        <div>Hobbs, NM 88240</div><br />
                        <label style="display:table-cell">Contact:</label>
                        <div>Dale May</div>
                        <div>575-397-2411</div>
                        <a href="mailto:dmay@watsontruck.com">dmay@watsontruck.com</a>
                    </div>
